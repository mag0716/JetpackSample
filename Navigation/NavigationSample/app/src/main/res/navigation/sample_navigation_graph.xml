<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sample_navigation_graph"
    android:label="sample_navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.github.mag0716.navigationsample.ParentFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_parent">
        <argument
            android:name="label"
            android:defaultValue="home"
            app:type="string" />
        <action
            android:id="@+id/action_child"
            app:destination="@id/homeChildTopFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.github.mag0716.navigationsample.ParentFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_parent">
        <argument
            android:name="label"
            android:defaultValue="dashboard"
            app:type="string" />
        <action
            android:id="@+id/action_child"
            app:destination="@id/dashboardChildTopFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.github.mag0716.navigationsample.ParentFragment"
        android:label="NotificationsFragment"
        tools:layout="@layout/fragment_parent">
        <argument
            android:name="label"
            android:defaultValue="navigation"
            app:type="string" />
        <action
            android:id="@+id/action_child"
            app:destination="@id/notificationsChildTopFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeChildTopFragment"
        android:name="com.github.mag0716.navigationsample.ChildFragment"
        android:label="HomeChildTopFragment"
        tools:layout="@layout/fragment_child_top" />
    <fragment
        android:id="@+id/dashboardChildTopFragment"
        android:name="com.github.mag0716.navigationsample.ChildFragment"
        android:label="DashboardChildTopFragment"
        tools:layout="@layout/fragment_child_top" />
    <fragment
        android:id="@+id/notificationsChildTopFragment"
        android:name="com.github.mag0716.navigationsample.ChildFragment"
        android:label="NotificationsChildTopFragment"
        tools:layout="@layout/fragment_child_top" />

    <!-- おそらく想定されていない定義方法 -->
    <!-- Global Action の利用するには navigation タグに id を指定する必要がある(https://issuetracker.google.com/issues/79627172) -->
    <action
        android:id="@+id/action_settings"
        app:destination="@id/settingsActivity" />
    <activity
        android:id="@+id/settingsActivity"
        android:name="com.github.mag0716.navigationsample.SettingsActivity"
        android:label="SettingsActivity"
        tools:layout="@layout/activity_settings">
        <argument
            android:name="dummy"
            app:type="string" />
    </activity>

</navigation>