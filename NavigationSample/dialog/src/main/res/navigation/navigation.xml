<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.github.mag0716.navigationsample.dialog.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_messageDialog"
            app:destination="@id/messageDialog" />
    </fragment>

    <fragment
        android:id="@+id/subFragment"
        android:name="com.github.mag0716.navigationsample.dialog.SubFragment"
        android:label="fragment_sub"
        tools:layout="@layout/fragment_sub" />

    <dialog
        android:id="@+id/messageDialog"
        android:name="com.github.mag0716.navigationsample.dialog.MessageDialogFragment">
        <action
            android:id="@+id/action_messageDialog_to_subFragment"
            app:destination="@id/subFragment" />
    </dialog>


</navigation>